{
	"typescript.tsdk": "./node_modules/typescript/lib/",
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/*.bak": true,
		"node_modules/": true,
		"tools/emulator/node_modules/": true,
		"build/": true,
		"dist/": true,
		// stuff from Docker container volumes:
		".local": true,
		".config": true,
		".pki": true,
		".bash_history": true,
		"data": true,
		// Keys, Certificates and Certificate Requests
		"ssl/": true
	},
	"files.associations": {
		"Dockerfile.*": "dockerfile"
	},
	"git.ignoreLimitWarning": true
}