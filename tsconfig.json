{
    "exclude": [
        "./build/**",
        "node_modules/**"
    ],
    "compilerOptions": {
        "lib": [
            "dom",
            "es5",
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "esnext.asynciterable"
        ],

        // Build Config
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": false,
        "strict": true,
        "alwaysStrict": true,

        // Source Map Config
        "sourceMap": true,

        // Directories
        "outDir": "./build/",
        "baseUrl": "./src/",

        // Language Rules
        "allowJs": false,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        
        // Language Features
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitAny": true
    }
}